apiVersion: v1
kind: Service
metadata:
  name: demo-server
  labels:
    app: demo-server
  annotations:
    # Annotation to associate service with neg controler, as describe in
    # https://cloud.google.com/traffic-director/docs/set-up-gke-pods#configuring_kubernetes_services_with_negs
    # Once the service is deployed, you can check the NEG status with:
    # ```
    # $ gcloud alpha compute network-endpoint-groups list
    # k8s1-92a6ad6d-default-demo-server-8000-bd274fd2  us-central1-c  GCE_VM_IP_PORT  1
    # ```
    cloud.google.com/neg: '{"exposed_ports":{"8000":{}}}'
spec:
  ports:
  - name: http
    port: 8000
  selector:
    app: demo-server
  type: ClusterIP
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  creationTimestamp: null
  name: demo-server
spec:
  replicas: 1
  strategy: {}
  template:
    metadata:
      labels:
        app: demo-server
    spec:
      containers:
      - image: docker.io/waip/simple-http:v1.0.1
        imagePullPolicy: IfNotPresent
        name: server
        ports:
        - containerPort: 8000
        - containerPort: 8080
        resources: {}
      - args:
        - proxy
        - sidecar
        - --domain
        - $(POD_NAMESPACE).svc.cluster.local
        - --configPath
        - /etc/istio/proxy
        - --binaryPath
        - /usr/local/bin/envoy
        - --serviceCluster
        - demo-server.$(POD_NAMESPACE)
        - --drainDuration
        - 45s
        - --parentShutdownDuration
        - 1m0s
        - --connectTimeout
        - 10s
        - --proxyAdminPort
        - "15000"
        - --discoveryAddress
        - trafficdirector.googleapis.com:443
        - --statusPort
        - "15020"
        - --applicationPorts
        - "8000"
        - --concurrency
        - "2"
        - --log_output_level
        - default:debug
        env:
        - name: POD_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        - name: POD_NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        - name: ISTIO_META_TRAFFICDIRECTOR_INTERCEPTION_PORT
          value: "15001"
        - name: ISTIO_META_TRAFFICDIRECTOR_INBOUND_BACKEND_PORTS
          value: "8000"
        - name: ISTIO_META_TRAFFICDIRECTOR_WORKLOAD_NAME
          value: "DEMO_BACKEND_SERVICE_NAME_PLACEHOLDER"
        - name: INSTANCE_IP
          valueFrom:
            fieldRef:
              fieldPath: status.podIP
        - name: ISTIO_META_POD_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        - name: ISTIO_META_CONFIG_NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        - name: ISTIO_META_INTERCEPTION_MODE
          value: REDIRECT
        - name: ISTIO_BOOTSTRAP
          value: "/var/lib/istio/envoy/gcp_envoy_bootstrap_tmpl.json"
        image: docker.io/istio/proxyv2:1.3.0
        imagePullPolicy: IfNotPresent
        name: istio-proxy
        ports:
        - containerPort: 15090
          name: http-envoy-prom
          protocol: TCP
        resources:
          limits:
            cpu: "2"
            memory: 128Mi
          requests:
            cpu: 100m
            memory: 128Mi
        securityContext:
          readOnlyRootFilesystem: true
          runAsGroup: 1337
          runAsUser: 1337
        volumeMounts:
        - mountPath: /etc/istio/proxy
          name: istio-envoy
        - mountPath: /etc/certs/
          name: istio-certs
        - mountPath: /var/run/sds
          name: sds-uds-path
        - mountPath: /var/run/secrets/tokens
          name: istio-token
      initContainers:
      - args:
        - -p
        - "15001"
        - -u
        - "1337"
        - -m
        - REDIRECT
        - -i
        - '*'
        - -b
        # This should be all the serving ports exposed by server app, but not
        # health check port.
        - "8000"
        env:
        - name: DISABLE_REDIRECTION_ON_LOCAL_LOOPBACK
          value: "true"
        image: docker.io/istio/proxy_init:1.3.0
        imagePullPolicy: IfNotPresent
        name: istio-init
        resources:
          limits:
            cpu: 100m
            memory: 50Mi
          requests:
            cpu: 10m
            memory: 10Mi
        securityContext:
          capabilities:
            add:
            - NET_ADMIN
      securityContext:
        fsGroup: 1337
      # Make sure the service account is created and associated with some GCP service account.
      serviceAccountName: DEMO_SERVER_KSA_PLACEHOLDER
      volumes:
      - emptyDir:
          medium: Memory
        name: istio-envoy
      - name: istio-certs
        secret:
          defaultMode: 420
          optional: true
          secretName: istio.DEMO_SERVER_KSA_PLACEHOLDER
      - name: sds-uds-path
        hostPath:
          path: /var/run/sds
      - name: istio-token
        projected:
          sources:
          - serviceAccountToken:
              # Replace with identity namespace. Typically, it is
              # $PROJECT_ID.svc.id.goog
              audience: IDENTITY_NAMESPACE_PLACEHOLDER
              expirationSeconds: 43200
              path: istio-token
